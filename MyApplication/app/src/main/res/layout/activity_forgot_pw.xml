<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    tools:context="com.example.myapplication.Activity.ForgotPwActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forgot_pw_txt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/barimage"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="비밀번호 찾기"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/exit_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/forgot_pw_txt"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|start"
            android:layout_toStartOf="@+id/space"
            android:background="@drawable/postingbackicon"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <EditText
        android:id="@+id/forgot_pw_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="이메일"
        android:inputType="textPersonName" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/forgot_pw_email"
            android:layout_centerVertical="false"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text=" 비밀번호를 보낼 이메일을 입력하세요"
            android:textColor="@android:color/darker_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/forgot_pw_email"
            android:layout_centerVertical="false"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text=" 정확한 이메일을 입력하세요"
            android:textColor="@android:color/holo_red_light"
            android:visibility="visible" />
    </FrameLayout>

    <Button
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/layout"
        android:fontFamily="sans-serif-condensed"
        android:text="메일 보내기" />


</LinearLayout>
